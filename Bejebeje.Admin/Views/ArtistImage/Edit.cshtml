@model Bejebeje.ViewModels.ArtistImage.ArtistImageEditViewModel

@{
  ViewData["Title"] = "Edit";
}

<h1>Edit artist image</h1>

<div class="row">
  <div class="col-md-4">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      
      <input name="Id" type="hidden" value="@Model.Id" />
      <input name="ArtistId" type="hidden" value="@Model.ArtistId" />
      
      <p>300 by 300 pixels and JPEG format only please.</p>

      <div class="form-group">
        <label asp-for="File" class="control-label"></label>
        <input asp-for="File" class="form-control" />
        <span asp-validation-for="File" class="text-danger"></span>
      </div>
      
      <div class="form-group">
        <input type="submit" value="Update image" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="Details" asp-controller="Artist" asp-route-id="@Model.ArtistId">Back to artist</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

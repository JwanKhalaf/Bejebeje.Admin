@model Bejebeje.ViewModels.ArtistImage.ArtistImageDeleteViewModel

@{
  ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<form asp-action="Delete" method="post">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>

  <input asp-for="ArtistId" type="hidden" />

  <input type="hidden" name="Id" value="@Model.Id"/>

  <div class="form-group">
    <input type="submit" value="Remove image" class="btn btn-primary" />
    <a asp-action="Details" asp-controller="Artist" asp-route-id="@Model.ArtistId">Back to artist</a>
  </div>
</form>
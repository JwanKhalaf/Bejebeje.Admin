@model Bejebeje.ViewModels.ArtistImage.ArtistImageCreateViewModel

@{
  ViewData["Title"] = "Add artist image";
}

<h1>Add artist image</h1>

<div class="row">
  <div class="col-md-4">
    <form asp-action="Create" enctype="multipart/form-data">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      <input asp-for="ArtistId" type="hidden" />
      
      <p>300 by 300 pixels and JPEG format only please.</p>

      <div class="form-group">
        <label asp-for="File" class="control-label"></label>
        <input asp-for="File" class="form-control" />
        <span asp-validation-for="File" class="text-danger"></span>
      </div>

      <div class="form-group">
        <input type="submit" value="Add image" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="Details" asp-controller="Artist" asp-route-id="@Model.ArtistId">Back to artist</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
